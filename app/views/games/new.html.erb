<!-- app/views/games/new.html.erb -->

<div class="mt-4 mx-5">
  <h2 class=pb-5>New Game</h2>

  <div class="container my-4">
    <div class="d-flex justify-content-around">
      <% @letters.each do |letter| %>
        <div class="p-4 text-center bd-blue-100 border border-white rounded">
            <strong><%= letter %></strong>
        </div>
      <% end %>
    </div>
  </div>


  <div  class="d-flex justify-content-around">
    <form action="/score" method="post" data-turbo="false" class="p-4 justify-content-between text-center bd-blue-100 rounded">
      <label for="answer" class="col-form-label col-form-label-lg">What is the longest word you can find?</label>
      <div class="input-group mb-3">
        <input id="answer" name="answer" type="text" class="form-control" placeholder="type your answer">
        <input type="submit" value="Play" class="fs-4 btn btn-primary px-3">
      </div>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </form><
  </div>

</div>
